{
  "name": "@codemcp/workflows-core",
  "version": "3.2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*",
    "resources/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && pnpm copy-workflows",
    "copy-workflows": "rm -rf resources && mkdir -p resources && cp -r ../../resources/workflows ../../resources/templates resources/",
    "dev": "tsc --watch",
    "clean:build": "rimraf ./dist ./resources",
    "test": "vitest --run",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@sqlite.org/sqlite-wasm": "3.50.4-build1",
    "@types/js-yaml": "4.0.9",
    "js-yaml": "4.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "vitest": "3.2.4"
  }
}
