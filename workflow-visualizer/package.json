{
  "name": "workflow-visualizer",
  "version": "1.0.0",
  "description": "Web app for visualizing responsible-vibe workflow state machines",
  "type": "module",
  "bin": {
    "workflow-visualizer": "bin/visualizer.js"
  },
  "scripts": {
    "dev": "npm run dev:setup && vite",
    "dev:setup": "cp src/services/BundledWorkflows.dev.ts src/services/BundledWorkflows.ts",
    "build": "npm run build:workflows && tsc && vite build",
    "build:workflows": "node scripts/build-workflows.js",
    "preview": "vite preview",
    "clean": "rm -rf dist workflows src/services/BundledWorkflows.ts"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "js-yaml": "^4.1.0",
    "plantuml-encoder": "1.4.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
